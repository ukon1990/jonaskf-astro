---
import { getCollection } from 'astro:content';
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import SocialLinks from './SocialLinks.astro';

const hasPublishedPosts = (
	await getCollection('blog', ({ data }) => !data.draft)
).length > 0;
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/cv">Experience</HeaderLink>
			{hasPublishedPosts && <HeaderLink href="/blog">Blog</HeaderLink>}
		</div>
		<div class="header-actions">
			<SocialLinks class="header-social-links" />
			<button
				type="button"
				class="theme-toggle"
				data-theme-toggle
				aria-pressed="false"
			>
				Use dark theme
			</button>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--card-background);
		box-shadow: var(--card-shadow);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.5rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--gray-dark));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.header-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.header-social-links {
		gap: 1rem;
	}
	.theme-toggle {
		padding: 0.4rem 1rem;
		border-radius: 999px;
		border: 1px solid rgba(var(--gray), 0.3);
		background: transparent;
		font-family: inherit;
		font-size: 0.9rem;
		font-weight: 600;
		color: rgb(var(--gray-dark));
		cursor: pointer;
		transition: color 0.2s ease, border-color 0.2s ease, background 0.2s ease,
			box-shadow 0.2s ease;
	}
	.theme-toggle:hover {
		color: var(--accent);
		border-color: color-mix(in srgb, var(--accent) 45%, rgba(var(--gray), 0.3));
		background: color-mix(in srgb, var(--accent) 12%, var(--card-background) 88%);
	}
	.theme-toggle:focus-visible {
		outline: 2px solid color-mix(in srgb, var(--accent) 50%, transparent);
		outline-offset: 2px;
	}
	.theme-toggle[aria-pressed='true'] {
		color: color-mix(in srgb, var(--accent-dark, var(--accent)) 70%, rgb(var(--gray-dark)) 30%);
		border-color: color-mix(in srgb, var(--accent) 45%, rgba(var(--gray), 0.25));
		background: color-mix(in srgb, var(--accent) 15%, var(--card-background) 85%);
		box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 18%, transparent);
	}
	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75rem;
		}
		.header-actions {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75rem;
		}
	}
</style>
