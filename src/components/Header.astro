---
import { getCollection } from 'astro:content';
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import SocialLinks from './SocialLinks.astro';

const hasPublishedPosts = (
	await getCollection('blog', ({ data }) => !data.draft)
).length > 0;
---

<header>
	<nav class="flex-between">
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links flex-wrap">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/cv">Experience</HeaderLink>
			{hasPublishedPosts && <HeaderLink href="/blog">Blog</HeaderLink>}
		</div>
		<div class="header-actions">
			<SocialLinks class="header-social-links" />
			<button
				type="button"
				class="btn-icon theme-toggle"
				data-theme-toggle
				aria-pressed="false"
				aria-label="Toggle theme"
			>
				<span class="icon icon--animated theme-icon theme-icon--sun" aria-hidden="true">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="12" cy="12" r="5"/>
						<path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
					</svg>
				</span>
				<span class="icon icon--animated theme-icon theme-icon--moon" aria-hidden="true">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
					</svg>
				</span>
			</button>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--card-background);
		box-shadow: var(--card-shadow);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		color: rgb(var(--gray-dark));
		text-decoration: none;
	}

	nav {
		gap: 1.5rem;
		min-height: 4rem;
	}

	.internal-links {
		gap: 0.5rem;
	}

	.internal-links :global(a) {
		padding: 1em 0.5em;
		color: rgb(var(--gray-dark));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	.internal-links :global(a.active) {
		border-bottom-color: var(--accent);
	}

	.header-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.header-social-links {
		gap: 1rem;
	}

	/* Theme toggle specific styles */
	.theme-toggle {
		position: relative;
	}

	.theme-icon {
		position: absolute;
	}

	.theme-icon--sun {
		opacity: 1;
		transform: rotate(0deg);
	}

	.theme-icon--moon {
		opacity: 0;
		transform: rotate(180deg);
	}

	.theme-toggle[aria-pressed='true'] .theme-icon--sun {
		opacity: 0;
		transform: rotate(-180deg);
	}

	.theme-toggle[aria-pressed='true'] .theme-icon--moon {
		opacity: 1;
		transform: rotate(0deg);
	}

	@media (max-width: 720px) {
		header {
			padding: 0 0.75em;
		}

		nav {
			gap: 1rem;
			min-height: 3.5rem;
		}

		.internal-links {
			gap: 0.5rem;
		}

		.internal-links :global(a) {
			padding: 0.75em 0.25em;
			font-size: 0.9rem;
		}

		.header-actions {
			gap: 0.75rem;
		}

		.header-social-links {
			gap: 0.75rem;
		}
	}

	@media (max-width: 480px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75rem;
			padding: 0.75rem 0;
		}

		.internal-links {
			order: 2;
			width: 100%;
			justify-content: flex-start;
		}

		.header-actions {
			order: 3;
			width: 100%;
			justify-content: space-between;
		}

		h2 {
			order: 1;
		}
	}
</style>
